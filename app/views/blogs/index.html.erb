  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-md-3">

        <div class="thumbnail">
          <%= link_to image_tag(blog.image.url), blog %>
          <div class="caption">
            <h3>
              <%= blog.name %><br>
            </h3>

            <p>
              Created by <%= blog.user.name %><br>
            </p>
            
            <p>
              <%= blog.summary %><br>
            </p>
            
          </div>
        </div>

      </div>
    <% end %>
  </div>
