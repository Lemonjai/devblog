  <table class="table table-stripe table-bordered">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Summary</th>
      <th>Description</th>
      <th>Action</th>
    </tr>

     <% @blogs.each do |blog| %>
      <tr>
        <td><%= image_tag blog.image.url(:thumb) %></td>
        <td><%= blog.name %></td>
        <td><%= blog.summary %></td>
        <td><%= blog.description %></td>
        <td>
          <%= link_to "View", blog %>
          <%= link_to "Edit", edit_blog_path(blog) %>
          <%= link_to "Delete", blog, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>

      <% end %>

  </table>

